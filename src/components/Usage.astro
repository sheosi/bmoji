---
const steps = [
    {
        number: "1",
        title: "Search",
        description: "Open bmoji and type to find your emoji",
    },
    {
        number: "2",
        title: "Select",
        description: "Click any emoji or press Enter for the first result",
    },
    {
        number: "3",
        title: "Paste",
        description:
            "The emoji is copied automatically - just paste it anywhere",
    },
];
---

<section class="px-6 py-20">
    <div class="mx-auto max-w-4xl">
        <div class="mb-12 text-center">
            <h2
                class="mb-4 text-3xl font-bold tracking-tight text-foreground md:text-4xl"
            >
                How to use
            </h2>
            <p class="text-muted-foreground">Three steps. That's it.</p>
        </div>

        <div
            class="flex flex-col items-center gap-4 md:flex-row md:justify-center md:gap-0"
        >
            {
                steps.map((step, index) => (
                    <>
                        <div class="flex flex-col items-center text-center">
                            <div class="mb-4 flex h-14 w-14 items-center justify-center rounded-full bg-accent text-2xl font-bold text-accent-foreground">
                                {step.number}
                            </div>
                            <h3 class="mb-1 text-lg font-semibold text-foreground">
                                {step.title}
                            </h3>
                            <p class="max-w-50 text-sm text-muted-foreground">
                                {step.description}
                            </p>
                        </div>
                        {index < steps.length - 1 && (
                            <div class="hidden h-px w-24 bg-border md:block" />
                        )}
                    </>
                ))
            }
        </div>
    </div>
</section>
